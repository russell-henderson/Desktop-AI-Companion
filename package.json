{
    "name": "electron-openai-desktop-assistant",
    "version": "1.0.0",
    "main": "dist-electron/main.js",
    "author": "YourName",
    "license": "MIT",
    "scripts": {
        "dev": "concurrently \"npm:vite:dev\" \"npm:electron:dev\"",
        "vite:dev": "vite",
        "electron:dev": "wait-on tcp:3000 && tsc -p tsconfig.main.json && electron .",
        "build": "tsc -p tsconfig.main.json && vite build && electron-builder",
        "preview": "vite preview"
    },
    "dependencies": {
        "dotenv": "^16.0.0",
        "openai": "^4.85.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "@types/react": "^19.2.6",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.1",
        "autoprefixer": "^10.4.22",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "electron": "^39.2.2",
        "electron-builder": "^25.1.8",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.17",
        "typescript": "^5.9.3",
        "vite": "^7.2.2",
        "wait-on": "^7.2.0"
    }
}